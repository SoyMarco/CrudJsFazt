<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Title" value="{{link.name}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="URL" value="{{link.email}}">
                </div>
                <div class="form-group">
                    <textarea name="phone" rows="2" class="form-control" placeholder="Description">{{link.phone}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>